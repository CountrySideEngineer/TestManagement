@page
@model TestManagement.APP.Pages.TestRuns.IndexModel
@{
    ViewData["Title"] = "テスト実行一覧";
}

<div class="container">
    <div class="block">
        <div class="block-title">テスト実行一覧</div>
        @if ((Model.TestRuns == null) || (Model.TestRuns.Count == 0))
        {
            <div>テスト実行情報がありません。</div>
        }
        else
        {
            <table class="table-header-center">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="text-center">実行日</th>
                        <th>実行件数</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tr in Model.TestRuns)
                    {
                        <tr>
                            <td class="col-right">@tr.Id</td>
                            <td class="text-center">@tr.ExecutedAt.ToString("yyyy/MM/dd HH:mm:ss")</td>
                            <td class="col-right">@tr.TestResults.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>

</div>
