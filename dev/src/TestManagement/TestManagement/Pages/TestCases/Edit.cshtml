@page "{id:int}"
@model TestManagement.Pages.TestCases.EditModel

@{
    ViewData["Title"] = "Edit Test Case";
}

<h1>テストケース編集</h1>

<h4>Test Case</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TestCase.Id" />

            <div class="form-group mb-3">
                <label asp-for="TestCase.Name" class="form-label"></label>
                <input asp-for="TestCase.Name" class="form-control" />
                <span asp-validation-for="TestCase.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TestCase.Description" class="form-label"></label>
                <textarea asp-for="TestCase.Description" class="form-control"></textarea>
                <span asp-validation-for="TestCase.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TestCase.CreatedAt" class="form-label"></label>
                <input asp-for="TestCase.CreatedAt" class="form-control" readonly />
            </div>

            <button type="submit" class="btn btn-primary">保存</button>
            <a asp-page="Index" class="btn btn-secondary">一覧に戻る</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
